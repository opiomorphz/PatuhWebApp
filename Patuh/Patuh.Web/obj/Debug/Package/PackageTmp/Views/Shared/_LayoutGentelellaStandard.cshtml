<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	  
    <title>PATUH</title>

    <!-- Bootstrap -->
     @Styles.Render("~/theme/gentelella/css")

  </head>

  <body class="nav-md footer_fixed">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="#" class="site_title"><div class="sal_appl_logo">&nbsp;</div></a>
            </div>

            <div class="clearfix"></div>
			<!-- sidebar menu -->
             @{Html.RenderPartial("_SidebarMenu");}
            <!-- /sidebar menu -->
			<div class="sidebar-footer hidden-small">
            </div>
          </div>
        </div>

        <!-- top navigation -->
         @{Html.RenderPartial("_TopNav");}
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="">
            <div class="clearfix"></div>
            <div class="x_panel">
                 @Html.Partial("_AlertPartial")
                 @RenderBody()
                
                <br />
                <br /> 

            </div>
          </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
          <div class="pull-right">
            &copy; PATUH
          </div>
          <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
      </div>
    </div>

   @Scripts.Render("~/theme/gentelella/js")
   @RenderSection("scripts", required: false)
        <script type="text/javascript">
           $(function () {

                @if (IsSectionDefined("CustomJsFooter"))
                  {
                   <!-- start:  REQUIRED FOR THIS PAGE ONLY -->
                    @RenderSection("CustomJsFooter")
                    <!-- end:  REQUIRED FOR THIS PAGE ONLY -->
                  }  

           });
        </script>	
  </body>
</html>
